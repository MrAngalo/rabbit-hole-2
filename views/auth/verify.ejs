<div class="container">
    <h1>Send Verification Email</h1>
    <form action="/verify" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div>
            <input type="email" name="email" placeholder="Email" value="<%= (locals.fields && locals.fields.email) ? locals.fields.email : '' %>" required>
        </div>
        <button type="submit">Verify</button>
    </form>
    <p><a href="/register">Don't have an account?</a></p>
</div>