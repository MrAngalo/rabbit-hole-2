<h1>Reset Your Password</h1>
<form action="/pwnew" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <input type="hidden" name="token" value="<%= locals.token %>">
    <div>
        <label for="email">Email</label>
        <input type="email" id="email" name="email" value="<%= (locals.fields && locals.fields.email) ? locals.fields.email : '' %>" required>
    </div>
    <div>
        <label for="password">New Password</label>
        <input type="password" id="password" name="password" required>
    </div>
    <div>
        <label for="password2">Confirm New Password</label>
        <input type="password" id="password2" name="password2" required>
    </div>
    <button type="submit">Reset Password</button>
</form>
<div>Remember your password? <a href="/login">Login</a> here</div>